<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
 http://wowprogramming.com/FrameXML/UI.xsd">
  <Slider name="MemoriaSliderTemplate" orientation="HORIZONTAL" enableMouse="true" virtual="true">
    <Size x="144" y="17"/>
    <HitRectInsets left="0" right="0" top="-10" bottom="-10"/>
    <Backdrop bgFile="Interface\Buttons\UI-SliderBar-Background"
        edgeFile="Interface\Buttons\UI-SliderBar-Border" tile="true">
      <EdgeSize val="8"/>
      <TileSize val="8"/>
      <BackgroundInsets left="3" right="3" top="6" bottom="6"/>
    </Backdrop>
    <ThumbTexture name="$parentThumb" file="Interface\Buttons\UI-SliderBar-Button-Horizontal">
      <Size x="32" y="32"/>
    </ThumbTexture>
    <Layers>
      <Layer level="OVERLAY">
    <FontString name="$parent_Text" inherits="GameFontWhite" text="0">
      <Anchors>
	<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent" x="0" y="-5"/>
      </Anchors>
    </FontString>
  </Layer>
</Layers>
  </Slider>
  <CheckButton name="MemoriaCBTemplate" virtual="true" inherits="OptionsCheckButtonTemplate">
    <Layers>
      <Layer level="OVERLAY">
        <FontString name="$parent_Text" inherits="GameFontWhite" text="Text (L)">
          <Anchors>
            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parent"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Scripts>
        <OnClick>
            local enable = self:GetChecked()
            if enable then
                PlaySound(856)
            else
                PlaySound(857)
            end
            Memoria:OptionsEnableDisable(self)
        </OnClick>
    </Scripts>
  </CheckButton>
  <Frame name="MemoriaOptionsTemplate" virtual="true">
    <Layers>
      <Layer level="OVERLAY">
        <FontString name="$parent_Title" inherits="GameFontNormalLarge" text="Title (L)">
          <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent" x="20" y="-20"/>
          </Anchors>
        </FontString>
        <FontString name="$parent_EventsHeadline" inherits="GameFontWhite" text="Make screenshot on (L)">
          <Anchors>
            <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent_Title" x="0" y="-20"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Frames>
      <Slider name="$parent_LogIntervalSlider" inherits="MemoriaSliderTemplate" minValue="1" maxValue="120" valueStep="1">
        <Anchors>
          <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent_EventsHeadline" x="0" y="-5"/>
        </Anchors>
      </Slider>
      <CheckButton name="$parent_NewAchievementCB" inherits="MemoriaCBTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent_LogIntervalSlider" x="0" y="-5"/>
        </Anchors>
      </CheckButton>

      <CheckButton name="$parent_DeathLogCB" inherits="MemoriaCBTemplate">
	<Anchors>
	  <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent_NewAchievementCB" x="0" y="-5"/>
	</Anchors>
      </CheckButton>
      <CheckButton name="$parent_DeathCB" inherits="MemoriaCBTemplate">
	<Anchors>
	  <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent_DeathLogCB" x="0" y="-5"/>
	</Anchors>
      </CheckButton>
      <CheckButton name="$parent_LevelUpLogCB" inherits="MemoriaCBTemplate">
	<Anchors>
	  <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent_DeathCB" x="0" y="-5"/>
	</Anchors>
      </CheckButton>
      <CheckButton name="$parent_LevelUpCB" inherits="MemoriaCBTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent_LevelUpLogCB" x="0" y="-5"/>
        </Anchors>
        <Frames>
          <CheckButton name="$parent_ShowPlayedCB" inherits="MemoriaCBTemplate">
            <Anchors>
              <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent" x="20" y="-5"/>
            </Anchors>
          </CheckButton>
          <CheckButton name="$parent_ResizeChatCB" inherits="MemoriaCBTemplate" parent="MemoriaOptions_LevelUpCB_ShowPlayedCB">
            <Anchors>
              <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent" x="20" y="-5"/>
            </Anchors>
          </CheckButton>
        </Frames>
      </CheckButton>
      <CheckButton name="$parent_ReputationChangeCB" inherits="MemoriaCBTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent_LevelUpCB_ShowPlayedCB_ResizeChatCB" x="-40" y="-5"/>
        </Anchors>
        <Frames>
          <CheckButton name="$parent_ExaltedOnlyCB" inherits="MemoriaCBTemplate">
            <Anchors>
              <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent" x="20" y="-5"/>
            </Anchors>
          </CheckButton>
        </Frames>
      </CheckButton>
      <CheckButton name="$parent_ArenaEndingCB" inherits="MemoriaCBTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent_ReputationChangeCB_ExaltedOnlyCB" x="-20" y="-5"/>
        </Anchors>
        <Frames>
          <CheckButton name="$parent_WinsOnlyCB" inherits="MemoriaCBTemplate">
            <Anchors>
              <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent" x="20" y="-5"/>
            </Anchors>
          </CheckButton>
        </Frames>
      </CheckButton>
      <CheckButton name="$parent_BattlegroundEndingLogCB" inherits="MemoriaCBTemplate">
	<Anchors>
	  <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent_ArenaEndingCB_WinsOnlyCB" x="-20" y="-5"/>
	</Anchors>
      </CheckButton>
      <CheckButton name="$parent_BattlegroundEndingCB" inherits="MemoriaCBTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent_BattlegroundEndingLogCB" x="0" y="-5"/>
        </Anchors>
        <Frames>
          <CheckButton name="$parent_WinsOnlyCB" inherits="MemoriaCBTemplate">
            <Anchors>
              <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent" x="20" y="-5"/>
            </Anchors>
          </CheckButton>
        </Frames>
      </CheckButton>
      <CheckButton name="$parent_PvPKillLogCB" inherits="MemoriaCBTemplate">
	<Anchors>
	  <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent_BattlegroundEndingCB_WinsOnlyCB" x="-20" y="-5"/>
	</Anchors>
      </CheckButton>
      <CheckButton name="$parent_PvPKillCB" inherits="MemoriaCBTemplate">
	<Anchors>
	  <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent_PvPKillLogCB" x="0" y="-5"/>
	</Anchors>
      </CheckButton>
      <CheckButton name="$parent_BosskillsLogCB" inherits="MemoriaCBTemplate">
	<Anchors>
	  <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent_PvPKillCB" x="0" y="-5"/>
	</Anchors>
      </CheckButton>
      <CheckButton name="$parent_BosskillsCB" inherits="MemoriaCBTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent_BosskillsLogCB" x="0" y="-5"/>
        </Anchors>
        <Frames>
          <CheckButton name="$parent_FirstkillsCB" inherits="MemoriaCBTemplate">
            <Anchors>
              <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent" x="20" y="-5"/>
            </Anchors>
          </CheckButton>
        </Frames>
      </CheckButton>
      <CheckButton name="$parent_ChallengeDoneCB" inherits="MemoriaCBTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent_BosskillsCB_FirstkillsCB" x="-20" y="-5"/>
        </Anchors>
      </CheckButton>
    </Frames>
  </Frame>
</Ui>
